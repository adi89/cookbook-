<%= form_for @book do |f| %>
<br>
<%= f.label :title, :autofocus => 'autofocus' %>
<%= f.text_field :title %>

<%= f.label :cuisine %>
<%= f.text_field :cuisine %>

<%= f.label :image, 'Image URL' %>
<%= f.text_field :image %>
<br>
<% Recipe.all.each do |recipe| %>
  <span><%= recipe.name %> </span>
  <%= check_box_tag 'book[recipe_ids][]', recipe.id, recipe.in?(@book.recipes.to_a) %>  <%# [] means array of recipe ids %>
<% end %>
<br>

<%= f.submit %>

<% end %>
