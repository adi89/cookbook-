<%= form_for @ingredient do |f| %>

<%= f.label :name, :autofocus => 'autofocus' %>
<%= f.text_field :name %>

<%= f.label :measurement %>
<%= f.text_field :measurement %>

<%= f.label :image, 'Image URL' %>
<%= f.text_field :image %>

<%= f.label :cost, 'Cost' %>
<%= f.text_field :cost %>

<%= f.submit %>

<% end %>
