<%= form_for @recipe do |f| %>

<%= f.label :name, :autofocus => 'autofocus' %>
<%= f.text_field :name %>

<%= f.label :cooktime %>
<%= f.text_field :cooktime %>

<%= f.label :image, 'Image URL' %>
<%= f.text_field :image %>

<%= f.label :instructions, 'instructions' %>
<%= f.text_field :instructions %>

<%= f.label :course %>
<%= f.text_field :course %>

<%= f.submit %>

<% end %>
